<script>
     function decrementQuantity(id) {
      alert(id,'dddddddd')
        document.getElementById("quantityInput").stepDown();
        sendData(id);
    }

    function incrementQuantity(id) {
        document.getElementById("quantityInput").stepUp();
        sendData(id);
    }

    function sendData(id) {
        const quantityValue = document.getElementById("quantityInput").value;
        console.log('supperrrrrrrrr ')
        
        // Make an HTTP POST request to send the updated quantity to the backend
        fetch('/user/updateQuantity', {                                                                                                                 
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ quantity: quantityValue,id })
        })
        .then(response => response.json())
        .then(data => {
            console.log('Response from backend:', data);
            // You can handle the response from the backend here
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
</script>