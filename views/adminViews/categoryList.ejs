<%- include('../partial/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-md-2">
      
      <%- include('../partial/adminSidebar.ejs') %>
      
    </div>
    
    
    
    <div class="col-md-10">
    <div>
    <h2 style="text-align: center; color: black;">Category</h2>
  </div>
  
    <div class="col-12 mb-3 mb-lg-5">
      <div class="overflow-hidden card table-nowrap table-card">
        <div style="width: 500px;height: 60; color: gray;">
          <!-- Example single danger button -->


        </div>
        <div class="card-header d-flex justify-content-between align-items-center">
          <!-- <h5 class="mb-0">dfjvndkv</h5> -->
          <div >
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
              filter
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item"  onclick="filter('-1')">latest</a></li>
              <li><a class="dropdown-item"  onclick="filter('1')">oldest</a></li>
              <!-- <li><a class="dropdown-item" href="#">Another action</a></li> -->
              <!-- <li><a class="dropdown-item" href="#">Something else here</a></li> -->
              <!-- <li><hr class="dropdown-divider"></li> -->
              <!-- <li><a class="dropdown-item" href="#">Separated link</a></li> -->
            </ul>
          </div>
          <!-- ////////////////// -->

           <form action="" id="searchCategory">

             <div class="input-group" style=" margin-left: 10%;">
              <div class="form-outline" data-mdb-input-init>
                <% if (query){%>
                  <input type="search" id="form1" placeholder="search" name="searchQuery" value="<%=query%>" class="form-control" />

                  <%}else{%>
                    <input type="search" id="form1" placeholder="search" name="searchQuery"  class="form-control" />

               <% }%>
                <!-- <label class="form-label" for="form1">Search</label> -->
              </div>
              <button onclick="searchCategory()" type="submit" class="btn btn-primary" data-mdb-ripple-init>
                <i class="fas fa-search"></i>
              </button>
              
              
            </div>
          </form>


          <!-- <a href="#!" class="btn btn-light btn-sm">View All</a> -->
          <button style="width: 180px;" type="button" class="btn btn-success"><a style="color:aliceblue ;" href="addCategory">Add Category</a></button>
        </div>
        <div class="table-responsive">
          <table class="table mb-0" id="categoryTableBody">
            <thead class="small text-uppercase bg-body text-muted">
              <tr>
                <th>Index</th>
                <th>category</th>
                <th>status</th>
                <th>Created Date</th>
                <th class="text-end">Action</th>
              </tr>
            </thead>
            <tbody id="tableBody">
              <% category.forEach((category, index) => { %>
                <tr class="align-middle">
                  <td><span class="d-inline-block align-middle"><%=(page - 1) * pageSize + index + 1%></span></td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div>
                        <div class="h6 mb-0 lh-1"><%= category.category %></div>
                      </div>
                    </div>
                    <% if(category.status === true){%>
                    <td><button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%= category._id %>">
                      block
                    </button></td>
                    
                    <% }else{%>
                      <td><button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%= category._id %>">
                        Unblock
                      </button></td>
                      <%}%>
                  <td><span><%= category.date.toISOString().slice(0, 10) %></span></td>
                  <td class="text-end">
                    <div class="dropdown">
                        <a class="btn btn-success" href="editCategory/<%= category._id %>">Edit</a>
                    </div>
                </td>
                </tr>
              <% }); %>
            </tbody>
          </table>

          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              <% for (let i = 1; i <= totalOrder; i++) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
              <% } %>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
            </ul>
          </nav>
          
          <% category.forEach((category, index) => { %>
            <div
            class="modal fade"
            id="staticBackdrop<%= category._id %>"
            data-bs-backdrop="static"
            data-bs-keyboard="false"
            tabindex="-1"
            aria-labelledby="staticBackdropLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">
                    
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <h5>the status of  the user</h5>
                </div>

                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <% if(category.status === true){%>

                  <button
                    type="button"
                    class="btn btn-primary"
                    onclick="manageCategory('<%=category._id%>')"
                  >
                    block
                  </button>
                  <% }else{%>
                  <button type="button" class="btn btn-danger"
                   onclick="manageCategory('<%=category._id%>')">Unblock</button>

                  <%}%>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>


<script>
   async function manageCategory(id) {
    try{
      console.log(id, "it is the id");
    const res = await fetch("/admin/manageCategory", {
      method: "POST",
        body: JSON.stringify({_id: id }),
        headers: {
          "Content-Type": "application/json",
        },
        
      })
      console.log(await res.json())
      window.location.reload()
  }catch(err){
    console.error("Category management failed:", error);
  }  
}

async function filter(arg){
  
  console.log('entered the fetch')
  const res = await fetch(`/admin/categoryList?date=${arg}`,{
    method: "GET",
    headers: {
      "Content-Type": "application/json",
    },    
  })
  let data = await res.json()
  console.log(data)
  updateTable(data);
}
 

function updateTable(data) {
  const bodyOfTable=document.getElementById("tableBody")
  // Clear existing table rows
  let rows=[]
  data.latest.forEach((category, index) => {
  let row = `
    <tr class="align-middle">
      <td><span class="d-inline-block align-middle">${index + 1}</span></td>
      <td>
        <div class="d-flex align-items-center">
          <div>
            <div class="h6 mb-0 lh-1">${category.category}</div>
          </div>
        </div>
      </td>`;

  if (category.status === true) {
    row += `
      <td>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop${category._id}">
          block
        </button>
      </td>`;
  } else {
    row += `
      <td>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop${category._id}">
          Unblock
        </button>
      </td>`;
  }

  row += `
      <td><span>${category.date.slice(0, 10) }</span></td>
      <td class="text-end">
        <div class="dropdown">
          <a class="btn btn-success" href="editCategory/${category._id }">Edit</a>
        </div>
      </td>
    </tr>`;

    rows.push(row)
  });
  
  bodyOfTable.innerHTML = rows.join("");
}



function searchCategory() {
        // Get the search input value
        var searchInput = document.getElementById("form1").value;

        // Get the form element
        var form = document.getElementById("searchCategory");

        // Set the form action URL with the search query parameter
        form.action = "/admin/categoryList?searchQuery=" + encodeURIComponent(searchInput);

        // Submit the form
        form.submit();

}

</script>
