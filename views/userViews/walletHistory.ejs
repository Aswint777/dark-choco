    <div class="col-md-2">
      <%- include('../partial/userSidebar.ejs') %>
    </div>
    <div class="col-md-10 col-12">
      <h2 style="text-align: center; color: black;">Wallet</h2>
      <div class="col-12 mb-3 mb-lg-5">
        <div class="overflow-hidden card table-nowrap table-card">
          <div class="card-header  justify-content-between ">
            <h3 class="mb-0" style="color: rgb(19, 188, 19);"><i class="bi bi-wallet" style="color: gray;"></i> &nbsp;â‚¹<%= walletData.walletAmount %></h3>
            <a href="#!" class="btn btn-light btn-sm">Wallet Balance</a>
          </div>
          <div class="table-responsive  ">
            <table class="table mb-0  ">
              <thead class="small text-uppercase bg-body text-muted">
                <tr>
                  <th>Index</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Created Date</th>
                </tr>
              </thead>
              <tbody>
            
                <% walletData.transactions.forEach((list,index) => { %>
                  <tr class="align-middle justify-content-between">
                    <td><span class="d-inline-block align-middle"><%= index+1 %></span></td>
                    <td>

                      <div class="d-flex align-items-center">
                        <div>
                          <div class="h6 mb-0 lh-1"><%= list.amount %></div>
                        </div>
                      </div>
                    </td>

                    <td><span><%= list.createdAt.toISOString().slice(0, 10).split('-').reverse().join('-') %></span></td>
                    <td><%= list.type %></td>
                    
                    
                  </tr>
                  <% }) %>


              </tbody>
            </table>

