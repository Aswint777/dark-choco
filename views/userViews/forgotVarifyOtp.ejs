<section class="container-fluid bg-body-tertiary d-block">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4" style="min-width: 500px;">
          <div class="card bg-white mb-5 mt-5 border-0" style="box-shadow: 0 12px 15px rgba(0, 0, 0, 0.02);">
            <div class="card-body p-5 text-center">
              <h4>Verify</h4>
              <p>Your otp was sent to you via email</p>
              <div></div>
              <form action="">
                <div class="form-outline mb-4" style="display: none;">
                  <label class="form-label" for="form2Example17"
                    >Email address</label
                  >
                  <input
                    name="email"
                    type="email"
                    id="form2Example17"
                    value="<%= email %>"
                    class="form-control form-control-lg"
                    disabled
                  />
                </div>
                
                <div class="otp-field mb-4 " name="email">
                  <input type="number" name="otp" />
                </div>
                
                <button class="btn btn-primary mb-3" type="submit">
                  Verify
                </button>
              </form>
  
              <p class="resend text-muted mb-0">
                Didn't receive otp? <button style="background-color: gray;" onclick=resendOtp()>Request again</button>
              </p>
            </div>
          </div>
        </div>
      </div>
  </section>





  <script>
    const form = document.querySelector("form");
  
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const email = form.email.value;
      const otp = form.otp.value;
  
      try {
        console.log(otp,email)
    
        const res = await fetch("/forgotPasswordOtp", {
          method: "POST",
          body: JSON.stringify({ email, otp}),
          headers: {
            "Content-Type": "application/json",
          },
        });
        if (!res.ok) {
          throw new Error(`HTTP error! Status: ${res.status}`);
        }
        console.log(res)
        const data = await res.json();

        if (data) {
          console.log('data is here ')
       
          location.href = `/setNewPassword/${encodeURIComponent(email)} `;
        }
      } catch (err) {
        console.log(err, "err");
        // alert(err.message)
      }
    });


