<script>
  const form = document.querySelector("form");
  const emailError = document.getElementById('emailError')
  const passwordError = document.getElementById('passwordError')
  const doubleError = document.getElementById('errors')

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    // get the value
    const email = form.email.value;
    const password = form.password.value;
    
    try {
      if (email === ''){
        emailError.innerHTML = 'proper email is required'
        setTimeout(()=>{
          emailError.innerHTML = ''
       },5000)
        return 
      }
      if (password === ''){
        console.log('hloooooozzz')
        passwordError.innerHTML = 'proper password  is required'
        setTimeout(()=>{
          passwordError.innerHTML = ''
       },5000)
        return 
      }
      console.log(email, password);
      const res = await fetch("/adminLogin/", {
        method: "POST",
        body: JSON.stringify({ email, password }),
        headers: {
          "Content-Type": "application/json",
        },
      });
      if (!res.ok) {
        throw new Error(`HTTP error! Status: ${res.status}`);
      }
      const data = await res.json();
      // if(data.errors){
      //   emailError.textContent = data.errors.email
      //   passwordError.textContent = data.errors.password
      // }
      console.log(data   );
      if (data.admin) {
        location.href = "/admin/adminDashboard";
      }
    } catch (err) {
      console.log(err, "err");
      doubleError.innerHTML = 'somthing wrong in password or email'
        setTimeout(()=>{
          doubleError.innerHTML = ''
       },5000)
    }
  });
</script>


