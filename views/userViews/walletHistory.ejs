<%- include('../partial/header.ejs') %> <%- include('../partial/userNavbar.ejs')
%>

<div class="container">
  <div class="row">
    <div class="col-md-2"><%- include('../partial/userSidebar.ejs') %></div>
    <div class="col-md-10 col-12">
      <h2 style="text-align: center; color: black">Wallet</h2>
      <div class="col-12 mb-3 mb-lg-5">
        <div class="overflow-hidden card table-nowrap table-card">
          <div class="card-header justify-content-between">
            <h3 class="mb-0" style="color: rgb(19, 188, 19)">
              <i class="bi bi-wallet" style="color: gray"></i> &nbsp;₹<%=
              walletData.walletAmount %>
            </h3>
            <a href="#!" class="btn btn-light btn-sm">Wallet Balance</a>
          </div>
          <div class="table-responsive">
            <table class="table mb-0">
              <thead class="small text-uppercase bg-body text-muted">
                <tr>
                  <th class="align-middle text-center">Index</th>
                  <th class="align-middle text-center">Amount(₹)</th>
                  <th class="align-middle text-center">Date</th>
                  <th class="align-middle text-center">Type</th>
                  <th class="align-middle text-center">Description</th>
                </tr>
              </thead>
              <tbody>
                <% walletData.transactions.forEach((list,index) => { %>
                <tr class="align-middle justify-content-between">
                  <td class="align-middle text-center"><%= index+1 %></td>
                  <td class="align-middle text-center"><%= list.amount %></td>
                  <td class="align-middle text-center">
                    <%= list.createdAt.toISOString().slice(0,
                    10).split('-').reverse().join('-') %>
                  </td>
                  <td class="align-middle text-center"><%= list.type %></td>
                  <td class="align-middle text-center">
                    <%= list.description %>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>

